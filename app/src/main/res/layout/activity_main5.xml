<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7577" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lisbeth.quizapp.Main5Activity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="South African Music Awards"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="160dp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/awards"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="south African Map"
        android:layout_marginLeft="60dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="315dp" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/maps"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="345dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:text="TV Programmmes" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="95dp"
        android:layout_height="136dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/prog" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:text="Questions Based On Our Late President"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="93dp"
        android:layout_height="125dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/man" />
</LinearLayout>
</ScrollView>